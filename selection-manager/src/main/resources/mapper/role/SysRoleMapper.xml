<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuunik.selection.manager.mapper.SysRoleMapper">
    <!-- map 映射 -->
    <resultMap id="sysRoleMap" type="com.yuunik.selection.model.entity.system.SysRole" autoMapping="true" />
    <!-- 用于 select 查询公用抽取的列 -->
    <sql id="columns">
        id,
        role_name roleName,
        role_code roleCode,
        description,
        create_time,
        update_time,
        is_deleted
    </sql>

    <sql id="findPageWhere">
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name like CONCAT('%', #{roleName}, '%')
            </if>
                and is_deleted = 0
        </where>
    </sql>

    <!-- 分页查询用户角色信息 -->
    <select id="selectRoleList" resultMap="sysRoleMap">
        select
            <include refid="columns"></include>
        from
            sys_role
        <include refid="findPageWhere"></include>
        order by id desc
    </select>

    <!-- 获取所有角色信息 -->
    <select id="selectAllRoles" resultMap="sysRoleMap">
        select
            <include refid="columns"></include>
        from
            sys_role
        where
            is_deleted = 0
    </select>

    <!-- 添加用户信息 -->
    <insert id="addRole" parameterType="com.yuunik.selection.model.entity.system.SysRole">
        insert into sys_role (
          role_name,
          role_code,
          description,
          create_time,
          update_time
        ) values (
          #{roleName},
          #{roleCode},
          #{description},
          now(),
          now()
        )
    </insert>

    <!-- 删除用户信息 -->
    <update id="deleteRole">
        update
            sys_role
        set
            is_deleted = 1,
            update_time = now()
        where id = #{id}
    </update>

    <!-- 修改用户信息 -->
    <update id="updateRole" parameterType="com.yuunik.selection.model.entity.system.SysRole">
        update
            sys_role
        set
            role_name = #{roleName},
            role_code = #{roleCode},
            description = #{description},
            update_time = now()
        where
            id = #{id}
    </update>
</mapper>